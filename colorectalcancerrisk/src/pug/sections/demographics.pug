	.row
		.col-xs-12.col-sm-4
			.responseOptions
				input(type="number", name="height-ft", min="2", max="9", aria-label="height feet", required)
				| ft.
		.col-xs-12.col-sm-4
			.responseOptions
				input(type="number", name="height-in", min="0", max="11", aria-label="height inches", required)
				| in.
		.col-xs-12.col-sm-4
			.responseOptions
				input(type="number", name="weight", min="50", max="700", aria-label="weight in pounds", required)
				| lbs